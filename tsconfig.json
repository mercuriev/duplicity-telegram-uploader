{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "typeRoots": ["./node_modules/@types", "types"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
